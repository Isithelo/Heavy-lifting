$( document ).ready(function() {
  var username = JSON.stringify('{{organization.entry.username}}')
  //var calender =  {{calender}}
  //console.log(calender)
  heatmap()
  if (username == user) {
    $('#assemblies').html('Loggedin as '+user)
    $('#components').html('Loggedin as '+user)
    
  }
});
///////////////////////////// 
//////  HEAT MAP      //////
/////////////////////////// 
function heatmap(){
  var cal = new CalHeatMap();
  cal.init({
    domain: "month",
    range: 12,
  });
}
</script>