<script type="text/javascript" src="//d3js.org/d3.v3.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.min.js"></script>
<link rel="stylesheet" href="//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.css" />
<div class="row" style="padding-top: 35px">
  <div class="col-md-4">
    <div class="media">
      <div class="media-left">
        <a href="#">
          {{#if organization.entry.picture}}
          <div id="googlepic"></div>
          {{else}}
          <img src="{{organization.entry.gravatar}}" class="media-object">
          {{/if}}
        </a>
      </div>
    </div>
    <h1>{{organization.entry.name}}</h1>
    <h3>{{organization.entry.username}}</h3>
    <p>{{organization.entry.bio}}</p>
    {{#if organization.entry.company}}
    <div class="row">
      <div class="col-sm-2">
        <i class="fa fa-users" aria-hidden="true"></i>
      </div>
      <div class="col-sm-8">
        {{dotdotdot organization.entry.company}}
      </div>
    </div>
    {{/if}}
    {{#if organization.entry.location}}
    <div class="row">
      <div class="col-sm-2">
        <i class="fa fa-map-marker" aria-hidden="true"></i>
      </div>
      <div class="col-sm-8">
        {{organization.entry.location}}
      </div>
    </div>
    {{/if}}
    {{#if organization.entry.business_email}}
    <div class="row">
      <div class="col-sm-2">
        <i class="fa fa-envelope-o" aria-hidden="true"></i>
      </div>
      <div class="col-sm-8">
        <a href="mailto:{{organization.entry.business_email}}">{{organization.entry.business_email}}</a>
      </div>
    </div>
    {{/if}}
    {{#if organization.entry.website}}
    <div class="row">
      <div class="col-sm-2">
        <i class="fa fa-link" aria-hidden="true"></i>
      </div>
      <div class="col-sm-8">
        <a href="http://{{organization.entry.website}}" target="_blank">{{organization.entry.website}}</a>
      </div>
    </div>
    {{/if}}
    {{#if organization.entry.owner}}
    <div class="row">
      <div class="col-sm-2">
        <i class="fa fa-key" aria-hidden="true"></i>
      </div>
      <div class="col-sm-8">
        {{organization.entry.owner}}
      </div>
    </div>
    {{/if}}
    {{#if organization.entry.members}}
    <div class="row">
      <div class="col-sm-2">
        <i class="fa fa-key" aria-hidden="true"></i>
      </div>
      <div class="col-sm-8">
        {{organization.entry.members}}
      </div>
    </div>
    {{/if}}
 
  </div>
  <div class="col-md-8">





<div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
  <li role="presentation" class="active"><a href="#Summary" aria-controls="Summary" role="tab" data-toggle="tab">Summary</a></li>
 
    <li role="presentation"><a href="#Components" aria-controls="Components" role="tab" data-toggle="tab">Components</a></li>
    <li role="presentation"><a href="#Assemblies" aria-controls="Assemblies" role="tab" data-toggle="tab">Assemblies</a></li>
     <li role="presentation" ><a href="#People" aria-controls="People" role="tab" data-toggle="tab">People</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="Summary">
          <h1>Public Assemblies</h1>
    <hr>
    <div id="assemblies">
      <p>No public assemblies are visible for this organization.</p>
    </div>
    <h1>Public Components</h1>
    <hr>
    <div id="components">
      <p>No public components are visible for this organization.</p>
    </div>

    <h1>Contributions in the last year.</h1>
    <hr>
    <div id="cal-heatmap"></div>
    </div>
    <div role="tabpanel" class="tab-pane" id="Components">
      
    </div>
    <div role="tabpanel" class="tab-pane" id="Assemblies">
      
    </div>
    <div role="tabpanel" class="tab-pane" id="People">
      
    </div>
  </div>

</div>






  </div>
</div>

<script type="text/javascript">
  var username = JSON.stringify('{{organization.entry.username}}')
  var user = JSON.stringify('{{user.username}}')
  var text = '{{organization.entry.picture}}'
  text =text.replace("sz&#x3D;50", "sz&#x3D;200");
  $('#googlepic').html('<img src="'+text+'" class="media-object">')
