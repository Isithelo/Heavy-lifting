function dataTableLoad (data,id,headings){
  html = ''
  html += '<thead><tr><th  style="width:1px"></th>'
  for (var i = 0; i < headings.length; i++) {
    html += '<th>'
    html+=headings[i]
    html += '</th>'
  }
  html += '</tr></thead>'
  html += '<tbody>'
  for (var i = 0; i < data.length; i++) {
     
    html += '<tr><td class="details-control" style="text-align:center;vertical-align:middle; " id="'+data[i]['id']+'" data-childType="'+data[i]['childType']+'"><i class="fa fa-plus-square-o" aria-hidden="true" ></i></td>'
    for (var j = 0; j < headings.length; j++) {
      html += '<td style=" vertical-align:middle">'
      html += data[i][headings[j]]
      html += '</td>'
    }
    html += '</tr>'
  }
  html += '<tbody>'
  $('#'+id).html(html)
} 

