<script type="text/javascript" src="//d3js.org/d3.v3.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.min.js"></script>
<link rel="stylesheet" href="//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.css" />

    <div class="media">
      <div class="media-left">
        <a href="#">
          {{#if organization.entry.picture}}
          <div id="googlepic"></div>
          {{else}}
          <img src="{{organization.entry.gravatar}}" class="media-object">
          {{/if}}
        </a>
      </div>
    </div>
<h1>{{organization.entry.displayname}}</h1>
<h3>{{organization.entry.name}}</h3>
<p>{{organization.entry.description}}</p>
    {{#if organization.entry.company}}
    <div class="row">
      <div class="col-sm-2">
        <i class="fa fa-users" aria-hidden="true"></i>
      </div>
      <div class="col-sm-8">
        {{dotdotdot organization.entry.company}}
      </div>
    </div>
    {{/if}}
    {{#if organization.entry.location}}
    <div class="row">
      <div class="col-sm-2">
        <i class="fa fa-map-marker" aria-hidden="true"></i>
      </div>
      <div class="col-sm-8">
        {{organization.entry.location}}
      </div>
    </div>
    {{/if}}
    {{#if organization.entry.email}}
    <div class="row">
      <div class="col-sm-2">
        <i class="fa fa-envelope-o" aria-hidden="true"></i>
      </div>
      <div class="col-sm-8">
        <a href="mailto:{{organization.entry.email}}">{{organization.entry.email}}</a>
      </div>
    </div>
    {{/if}}
    {{#if organization.entry.url}}
    <div class="row">
      <div class="col-sm-2">
        <i class="fa fa-link" aria-hidden="true"></i>
      </div>
      <div class="col-sm-8">
        <a href="http://{{organization.entry.url}}" target="_blank">{{organization.entry.url}}</a>
      </div>
    </div>
    {{/if}}
 

    <hr>