html += '<strong>'
html += 'Oh snap!'
html += '</strong> '
html += 'Table error , Please let us know about this.'
html += '</div>'
//client side error check for the tables.
if (tablelistdata !== null) {
  if (tablelistdata.length !== 0) {
    dataTableLoad (tablelistdata,tempVarID,headings)
    loadDataTable(tempVarID)
  } else {
    $('#loading').html(html)
  }
} else {
  $('#loading').html(html)
}
};

//////////////////////////////////////
////////    HTML FOR TABLE  /////////
////////////////////////////////////
function dataTableLoad (data,id,headings){
  html = ''
  html += '<thead><tr>'
  for (var i = 0; i < headings.length; i++) {
    html += '<th>'
    html+=headings[i]
    html += '</th>'
  }
  html += '<th  style="width:1px"></th></tr></thead>'
  html += '<tbody>'
  for (var i = 0; i < data.length; i++) {
    html += '<tr>'
    for (var j = 0; j < headings.length; j++) {
      html += '<td style=" vertical-align:middle">'
      html += data[i][headings[j]]
      html += '</td>'
    }
    html += '<td class="details-control" style="text-align:center;vertical-align:middle; " id="'+data[i]['_id']+'"><button type="button" class="btn btn-default">Edit</button></td></tr>'
  }
  html += '<tbody>'
  $('#'+id).html(html)
} 


