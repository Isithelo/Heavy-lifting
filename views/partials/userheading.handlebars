    <div class="row">
      <div class="col-md-3">
            <div class="media">
      <div class="media-center">

        <a href="#">
          {{#if user.picture}}
           <img src="{{user.picture}}" class="media-object" style="max-width: 100%">
          {{else}}
          <img src="{{user.gravatar}}" class="media-object">
