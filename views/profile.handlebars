<div class="col-sm-12">
      {{#if messages.success}}
      <div role="alert" class="alert alert-success">
        {{#each messages.success}}
        <div>{{msg}}</div>
        {{/each}}
      </div>
      {{/if}}
      {{#if messages.error}}
      <div role="alert" class="alert alert-danger">
        {{#each messages.error}}
        <div>{{msg}}</div>
        {{/each}}
      </div>
      {{/if}}
      <form method="POST" action="/account?_method=PUT" class="form-horizontal">
        <legend>Profile Information</legend>
        <div class="row">
          <div class="col-md-8">
            <div class="form-group">
              <label for="username" class="col-sm-3">Username</label>
              <div class="col-sm-9">
                <input type="username" name="username" id="username" class="form-control" value="{{user.username}}" disabled>
                <p class="help-block">Changing your username can have unforeseen consequences. <a class="btn btn-default btn-xs"  onclick="activate()">Change</a></p>
              </div>
            </div>
            <div class="form-group">
              <label for="email" class="col-sm-3">Email</label>
              <div class="col-sm-9">
                <input type="email" name="email" id="email" class="form-control" value="{{user.email}}">
              </div>
            </div>
            <div class="form-group">
              <label for="name" class="col-sm-3">Name</label>
              <div class="col-sm-9">
                <input type="text" name="name" id="name" class="form-control" value="{{user.name}}">
              </div>
            </div>
            <div class="form-group">
              <label for="name" class="col-sm-3">Bio</label>
              <div class="col-sm-9">
                <textarea type="text" rows="3" name="bio" id="bio" class="form-control"  >{{user.bio}}</textarea>
              </div>
            </div>
            <div class="form-group">
              <label for="location" class="col-sm-3">Location</label>
              <div class="col-sm-9">
                <input type="text" name="location" id="location" class="form-control" value="{{user.location}}">
              </div>
            </div>
            <div class="form-group">
              <label for="website" class="col-sm-3">Website</label>
              <div class="col-sm-9">
                <input type="text" name="website" id="website" class="form-control" value="{{user.website}}">
              </div>
            </div>
            <div class="form-group">
              <label for="company" class="col-sm-3">Company</label>
              <div class="col-sm-9">
                <input type="text" name="company" id="company" class="form-control" value="{{user.company}}">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-4">
                <button type="submit" class="btn btn-default">Update Profile</button>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <div class="col-sm-12">
                {{#if user.picture}}
                <img src="{{user.picture}}" class="media-object">
                {{else}}
                <img src="{{user.gravatar}}" class="media-object">
                {{/if}}
              </div>
              <label class="col-sm-12">Gravatar</label>
            </div>
          </div>
        </div>
      </form>
    </div>
 

<script type="text/javascript">
  function activate(){
    $('#username').prop('disabled', false);
  }
</script>